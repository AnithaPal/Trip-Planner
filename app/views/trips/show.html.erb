<div class="container">
  <div class= "row col-md-2 pull-left">
    <%= link_to trips_path, class: 'btn btn-primary' do  %>
      <i class="glyphicon glyphicon-arrow-left"> </i>&nbsp; 
    <% end %>
  </div>
  <br />
  <h1 class="text-center"> <%= @trip.name.capitalize %> <br/>
    <small>
      <%= link_to edit_trip_path , class: 'btn btn-default btn-xs'  do %>
        <i class="glyphicon glyphicon-pencil"> </i>&nbsp; 
      <% end %>
      <%= link_to @trip, method: :delete, class: 'btn btn-danger btn-xs', data: {confirm: 'Are you sure you want to delete this trip?'} do %>
        <i class="glyphicon glyphicon-trash"> </i>&nbsp; 
      <% end %>
    </small>
  </h1>
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default panel-info">
        <div class="panel-heading text-center"> 
          <h3> Invite Friends for <%= @trip.name %></h3> 
        </div>
        <div class="panel-body"> </div>
          <%= form_for @invite, :url => invites_path do |f| %>
            <%= f.hidden_field :trip_id, :value => @trip.id %>
            <div class="form-group text-center">
              <%= f.label :email %>
              <%= f.email_field :email %>
            </div>
            <div class="form-group text-center">
              <%= f.submit 'Invite!', class: 'btn btn-success' %>
            </div>
          <% end %>
          <table class="table table-borderless">
            <% @trip.trippers.each do |tripper| %>
              <tr>
                <td>
                  <strong> <%= tripper.user.name %> </strong> 
                </td>
                <td>
                  <%= link_to tripper_path(tripper.id), method: :delete, class: 'btn', data: {confirm: 'Are you sure, you want to remove this tripper from your trip?'} do %>
                    <i class="glyphicon glyphicon-remove"> </i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </table>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default panel-info">
        <div class="panel-heading text-center"> <h3> <%= link_to "Add a Poll", new_trip_poll_path(@trip) %> </h3> </div>
        <div class="panel-body">
          <% @trip.polls.each do |poll| %>
            <h4> <%= link_to "#{poll.topic.capitalize}", trip_poll_path(poll.trip, poll) %> 
            <small>(voted: <%= poll.votes_summary %>)</small>
            </h4>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

