<div class="container">
  <div class="row col-md-8">

    <table class="table table-borderless">
      <tr>
        <td> <h4> <%= @trip.name %> </h4></td>
        <td>
          <div class="btn-group-justify">
            <button>
              <%= link_to edit_trip_path , class: 'btn btn-default btn-xs'  do %>
                <i class="glyphicon glyphicon-pencil"> </i>&nbsp; 
              <% end %>
            </button>
            <button>
              <%= link_to @trip, method: :delete, class: 'btn btn-danger btn-xs', data: {confirm: 'Are you sure you want to delete this trip?'} do %>
                <i class="glyphicon glyphicon-trash"> </i>&nbsp; 
              <% end %>
            </button>
          </div>
        </td>
      </tr>
    </table>
  </div>
</div>

