<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="text-center">My Trips</h1>
      <h4 class="text-center"> <%= link_to "Add trip", new_trip_path %> </h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default panel-info">
        <div class="panel-heading text-center"> Trips I created </div>
          <div class="panel-body text-justify">
            <table class="table table-striped table-borderless table-nonfluid">
              <% @trips.each do |trip| %>
                <tr>
                  <td> <%= link_to trip.name.capitalize, trip%> </td>
                  <td> <%= link_to "Expenses", trip_expenses_path(trip) %> </td>
                </tr>
              <% end %>
            </table>

          </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default panel-info">
        <div class="panel-heading text-center"> Trips Invited to</div>
          <div class="panel-body text-justify ">
            <% @trips_invited_to.each do |trip| %>
              <ul class="list-unstyled">
                <li> <%= link_to trip.name.capitalize, trip %> </li>
              </ul>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
